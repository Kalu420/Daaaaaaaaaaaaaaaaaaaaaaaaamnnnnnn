<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/colorPrimary"
    tools:context="com.example.lukak.daaaaaaaaaaaaaaaaaaaaaaaaamnnnnnn.Konfiguracija"
    android:weightSum="1">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Podesi Vrijeme i Datum"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:id="@+id/timeDateText"
        android:textColor="#ffffff"
        android:textColorHint="#FFFFFF"


        />

  <TableRow android:layout_width="match_parent"
      android:layout_height="50dp"
      android:layout_marginTop="5dp"

      >


      <TextView

          android:layout_height="50dp"
          android:layout_width="200dp"
          android:layout_gravity="end"
          android:text="SMS Izvještaj"
          android:textSize="20dp"
          android:gravity="center_vertical"
          android:layout_marginRight="10dp"
          android:textColor="#ffffff"
          />
      <ToggleButton
          android:layout_height="match_parent"
          android:layout_width="80dp"
          android:textColor="#ffffff"
          android:id="@+id/toggleSMS"
          android:background="@color/colorPrimary"

          />

  </TableRow>

    <TableRow android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"

        >


        <TextView

            android:layout_height="50dp"
            android:layout_width="200dp"
            android:layout_gravity="end"
            android:text="Blue Leaf"
            android:textSize="20dp"
            android:gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:textColor="#ffffff"
            />
        <ToggleButton
            android:layout_height="50dp"
            android:layout_width="80dp"
            android:background="@color/colorPrimary"
            android:textColor="#ffffff"
            android:id="@+id/toggleBlue"

            />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        >

        <TextView
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:text="Koef Vodomjera"
            android:textSize="20dp"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:textColor="#ffffff"

            />
        <EditText
            android:layout_height="match_parent"
            android:layout_width="80dp"
            android:gravity="center"
            android:id="@+id/brUmnozakaText"
            android:textColor="#ffffff"


            />

    </TableRow>

    <TableRow android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"

        >


        <TextView

            android:layout_height="50dp"
            android:layout_width="200dp"
            android:layout_gravity="end"
            android:text="Način Rada"
            android:textSize="20dp"
            android:gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:textColor="#ffffff"
            />
        <ToggleButton
            android:layout_height="50dp"
            android:layout_width="80dp"
            android:background="@drawable/toggle_selector"
            android:textOff=""
            android:textOn=""
            android:layout_marginRight="10dp"
            android:id="@+id/toggle_litri_min"



            />

    </TableRow>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Broj za SMS Izvještaj"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:id="@+id/brojText"
        android:textColor="#ffffff"
        android:privateImeOptions="nm"
        android:inputType="phone"
        android:textColorHint="#FFFFFF"


        />

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/confirmButton"
        android:text="Potvrdi "
        android:layout_marginBottom="5dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:textColor="#ffffff"
        android:background="@drawable/my_selector1"
        />
</RelativeLayout>


</LinearLayout>
